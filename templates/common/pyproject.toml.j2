[build-system]
requires = ["setuptools>=61.0", "wheel"]
build-backend = "setuptools.build_meta"

[project]
name = "{{ project_name }}"
version = "0.1.0"
description = "{{ framework_display }} {{ task_display }} project"
readme = "README.md"
authors = [
    {name = "{{ author_name }}", email = "author@example.com"}
]
classifiers = [
    "Development Status :: 3 - Alpha",
    "Intended Audience :: Developers",
    "License :: OSI Approved :: MIT License",
    "Programming Language :: Python :: 3",
    "Programming Language :: Python :: 3.{{ python_version.split('.')[1] }}",
]
requires-python = ">={{ python_version }}"
dependencies = [
    "numpy>=1.21.0",
    "pandas>=1.3.0",
    "scikit-learn>=1.0.0",
    "matplotlib>=3.5.0",
    "seaborn>=0.11.0",
    "joblib>=1.1.0",
    {% if framework == "pytorch" %}
    "torch>=1.12.0",
    "torchvision>=0.13.0",
    "torchaudio>=0.12.0",
    {% elif framework == "tensorflow" %}
    "tensorflow>=2.9.0",
    "keras>=2.9.0",
    {% endif %}
    {% if experiment_tracking == "mlflow" %}
    "mlflow>=1.26.0",
    {% elif experiment_tracking == "wandb" %}
    "wandb>=0.12.0",
    {% endif %}
    {% if deployment == "fastapi" %}
    "fastapi>=0.78.0",
    "uvicorn>=0.18.0",
    "pydantic>=1.9.0",
    {% endif %}
    {% if monitoring == "evidently" %}
    "evidently>=0.2.0",
    {% endif %}
    "pyyaml>=6.0",
    "tqdm>=4.64.0",
    "python-dotenv>=0.20.0",
]

[project.optional-dependencies]
dev = [
    "pytest>=7.0.0",
    "pytest-cov>=3.0.0",
    "black>=22.0.0",
    "isort>=5.10.0",
    "flake8>=4.0.0",
    "mypy>=0.950",
    "jupyter>=1.0.0",
    "jupyterlab>=3.4.0",
]

[project.scripts]
{{ project_name }}-train = "src.train:main"
{{ project_name }}-inference = "src.inference:main"

[tool.setuptools.packages.find]
where = ["."]
include = ["src*"]

[tool.black]
line-length = 88
target-version = ['py{{ python_version.split('.')[1] }}']

[tool.isort]
profile = "black"
line_length = 88

[tool.mypy]
python_version = "{{ python_version }}"
warn_return_any = true
warn_unused_configs = true
disallow_untyped_defs = true

[tool.pytest.ini_options]
testpaths = ["tests"]
python_files = ["test_*.py"]
python_classes = ["Test*"]
python_functions = ["test_*"]
addopts = "-v --cov=src --cov-report=html --cov-report=term-missing"
